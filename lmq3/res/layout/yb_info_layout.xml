<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/back" >

    <include layout="@layout/page_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/hyjhzt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp" >

            <TextView
                style="@style/black18Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="会员激活状态"
                android:textColor="@color/new_black_color" />

            <TextView
                android:id="@+id/tv_hyjhzt"
                style="@style/gray16Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="@string/load" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/back" />

        <RelativeLayout
            android:id="@+id/bdyhk"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_p_kuang4"
            android:padding="10dp" >

            <TextView
                style="@style/black18Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="绑定银行卡"
                android:textColor="@color/new_black_color" />

            <TextView
                android:id="@+id/tv_bdyhk"
                style="@style/gray16Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="@string/load" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/back" />

        <RelativeLayout
            android:id="@+id/tgzhye"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_p_kuang4"
            android:padding="10dp" >

            <TextView
                style="@style/black18Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="托管账户余额"
                android:textColor="@color/new_black_color" />

            <TextView
                android:id="@+id/tv_tgzhye"
                style="@style/gray16Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="@string/load" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/back" />

        <RelativeLayout
            android:id="@+id/tgkyye"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_p_kuang4"
            android:padding="10dp" >

            <TextView
                style="@style/black18Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="托管可用余额"
                android:textColor="@color/new_black_color" />

            <TextView
                android:id="@+id/tv_tgkyye"
                style="@style/gray16Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="@string/load" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/back" />

        <RelativeLayout
            android:id="@+id/tgdjje"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_p_kuang4"
            android:padding="10dp" >

            <TextView
                style="@style/black18Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="托管冻结金额"
                android:textColor="@color/new_black_color" />

            <TextView
                android:id="@+id/tv_tgdjje"
                style="@style/gray16Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="@string/load" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/back" />

        <RelativeLayout
            android:id="@+id/finger_pwd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@drawable/button_p_kuang4"
            android:padding="10dp"
            android:tag="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="自动投标授权"
                android:textColor="@color/title_black"
                android:textSize="17sp" />

            <ToggleButton
                android:id="@+id/toggle_screenLock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/torggle_bg"
                android:checked="true"
                android:gravity="left|center_vertical"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:textColor="#ffffff"
                android:textOff=""
                android:textOn="" />
        </RelativeLayout>

    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="温馨提示："
            style="@style/red12Text"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="1.请核对好您的托管信息，系统会对用户的所有资料进行严格保密。"
            style="@style/black12Text"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="2.使用过程遇到问题，请联系客服。"
            style="@style/black12Text"/>
    </LinearLayout>

</LinearLayout>