<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/person_red"
                android:orientation="vertical"
                android:padding="15dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/biao" />

                    <TextView
                        style="@style/white20Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:text="进行时间:" />
                    
                    <LinearLayout 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        
                        <TextView
                         android:id="@+id/day_text"
                        style="@style/white20Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0" />

                    <TextView
                        style="@style/white13Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="天" />

                    <TextView
                        android:id="@+id/time_text"
                        style="@style/white20Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00" />

                    <TextView
                        style="@style/white13Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="时" />

                    <TextView
                        android:id="@+id/minut_time"
                        style="@style/white20Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00" />

                    <TextView
                        style="@style/white13Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分" />

                    <TextView
                        android:id="@+id/second_text"
                        style="@style/white20Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00" />

                    <TextView
                        style="@style/white13Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="秒" />
                        
                    </LinearLayout>

                    
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical" >

                        <TextView
                            style="@style/white14Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="剩余可投:" />

                        <TextView
                            android:id="@+id/tv_shkt"
                            style="@style/white20Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="1000元" />

                        <TextView
                            style="@style/white14Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="计划金额:" />

                        <TextView
                            android:id="@+id/tv_funds"
                            style="@style/white20Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="10000.00元" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical" >

                        <TextView
                            style="@style/white14Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="年化收益:" />

                        <TextView
                            android:id="@+id/tv_nhsy"
                            style="@style/white20Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="10.00%" />

                        <TextView
                            style="@style/white14Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="封存期限:" />

                        <TextView
                            android:id="@+id/tv_term"
                            style="@style/white20Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="1天" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    style="@style/black16Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请输入金额: " />

                <EditText
                    android:id="@+id/ed_money"
                    style="@style/gray13Text"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:background="@drawable/new_edt_shape"
                    android:hint="请输入起投金额"
                    android:inputType="number"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_start_funds"
                    style="@style/red15Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="起投金额为50元" />

                <Button
                    android:id="@+id/buy_brn"
                    style="@style/white16Text"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/new_btn_shape"
                    android:text="立即认购" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#cccccc" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp" >

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/gsy" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/img1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/yellow18Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="高" />

                        <TextView
                            style="@style/black18Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收益，" />

                        <TextView
                            style="@style/yellow18Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="利" />

                        <TextView
                            style="@style/black18Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="滚" />

                        <TextView
                            style="@style/yellow18Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="利" />
                    </LinearLayout>

                    <TextView
                        style="@style/gray13Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="利息是余额宝的N倍，利息每天复投利滚利"
                        android:gravity="center_horizontal" />
                </LinearLayout>

                
            </RelativeLayout>
            
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/img1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="#cccccc" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp" >

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/sssh" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/img2"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/yellow18Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="随时" />

                        <TextView
                            style="@style/black18Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="赎回，" />

                        <TextView
                            style="@style/yellow18Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="灵活" />

                        <TextView
                            style="@style/black18Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="变现" />
                    </LinearLayout>

                    <TextView
                        style="@style/gray13Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="过了封存期可以提前赎回，本金收益即时到账，收益不减"
                        android:gravity="center_horizontal" />
                </LinearLayout>

                
            </RelativeLayout>
            
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/img2"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="#cccccc" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:padding="10dp" >

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/jtjs" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/img3"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/black18Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="即" />

                        <TextView
                            style="@style/yellow18Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="投" />

                        <TextView
                            style="@style/black18Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="即" />

                        <TextView
                            style="@style/yellow18Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="算" />

                        <TextView
                            style="@style/black18Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="，资金" />
                        
                        <TextView
                            style="@style/yellow18Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="不站岗" />
                    </LinearLayout>

                    <TextView
                        style="@style/gray13Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="投资成功立即计算利息，资金不会等待浪费"
                        android:gravity="center_horizontal" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>