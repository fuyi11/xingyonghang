<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    android:orientation="vertical" >

    <include layout="@layout/page_head" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:background="@drawable/button_p_kuang4"
            android:orientation="horizontal"
            android:padding="10dp" >

            <TextView
                style="@style/black20Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:text="@string/yphone" />

            <EditText
                android:id="@+id/ed_newphone"
                style="@style/gray13Text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#00000000"
                android:inputType="phone"
                android:maxLength="11"
                android:singleLine="true"
                android:hint="@string/newphone"
                android:paddingLeft="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:background="@drawable/button_p_kuang4"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ed_yzm"
                style="@style/gray13Text"
                android:layout_width="202dp"
                android:layout_height="40dp"
                android:hint="@string/newphone2"
                android:paddingLeft="20dp"
                android:background="@color/white"
                >
            </EditText>
            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/btn_yzm"
                style="@style/white13Text"
                android:id="@+id/btn_yzm"
                android:layout_marginLeft="20dp"
                android:background="@drawable/new_btn_shape"/>



        </LinearLayout>



        <TextView
            style="@style/gray13Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:text="6-16位字符,建议使用字母加数字的组合" />

        <Button
            android:id="@+id/enter"
            style="@style/white18Text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dp"
            android:background="@drawable/new_btn_shape"
            android:padding="10dp"
            android:text="@string/wcheng" />
    </LinearLayout>

</LinearLayout>