<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0eff4"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_color" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/button_b_to_left" />

        <TextView
            android:id="@+id/title"
            style="@style/white20Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <Button
            android:id="@+id/shareBtn"
            style="@style/white16Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:text="分享" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/index_detail_red"
            android:orientation="vertical" >
            
               <TextView
                   style="@style/white12Text"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="5dp"
                   android:gravity="center_horizontal"
                   android:text="融资金额(元)" />

               <TextView
                   android:id="@+id/jkje"
                   style="@style/white20Text"
                   android:textSize="45sp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="5dp"
                   android:gravity="center_horizontal"
                   android:singleLine="true"
                   android:text="@string/load" />
            <LinearLayout
                android:id="@+id/lv_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp" >
                
                <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:orientation="vertical" >
                   
                    <TextView
                        style="@style/white12Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="预期年化" />
                   
                    <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:gravity="center"
                     android:orientation="horizontal" >
                     <TextView
                        android:id="@+id/nhlv"
                        style="@style/white20Text"
                        android:textSize="28sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:text="@string/load" />
                     <TextView
                        style="@style/white13Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:text="%" />
                   </LinearLayout>
                </LinearLayout>
                
                 <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:orientation="vertical" >
                   
                    <TextView
                        style="@style/white12Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="起投金额" />
                   <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:gravity="center"
                     android:orientation="horizontal" >
                     <TextView
                        android:id="@+id/borrow_min"
                        style="@style/white20Text"
                        android:textSize="28sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:text="@string/load" />
                     <TextView
                        style="@style/white13Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:text="元" />
                   </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            
              <ProgressBar
                  android:id="@+id/progressbar"
                  style="@style/progressBarHorizontal_color"
                  android:layout_width="match_parent"
                  android:layout_height="14dp"
                  android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp"
                  android:layout_marginTop="10dp"
                  android:max="100"
                  android:progress="0" />
              
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp" >
                
               <RelativeLayout 
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
                <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentLeft="true"
                   android:layout_marginLeft="20dp"
                   android:orientation="horizontal" >
                   
                    <TextView 
                        style="@style/white15Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="已融资" />
                   
                    <TextView
                        android:id="@+id/progresstext"
                        style="@style/white15Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/load" />
                    <TextView
                        style="@style/white15Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="%" />

                </LinearLayout>
             </RelativeLayout> 
             
         <RelativeLayout 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">
                 <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="20dp"
                   android:orientation="horizontal" >
                   
                    <TextView
                        android:id="@+id/sh_money"
                        style="@style/white15Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="剩余:" />
                    <TextView
                        android:id="@+id/syje"
                        style="@style/white15Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/load" />
                    <TextView
                        style="@style/white15Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="元" />
                 </LinearLayout>
              </RelativeLayout> 
          </LinearLayout>
                </LinearLayout>       
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:background="@color/back"
                 android:orientation="vertical" >
            
                 <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                     android:layout_marginTop="0.5dp"
                    android:background="@drawable/button_p_kuang4"
                    android:padding="10dp" >

                    <TextView
                        style="@style/new_black_color17Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="项目名称"
                        android:textColor="@color/new_black_color" />

                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/new_gray_color15Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:maxWidth="180dp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:text="@string/load" />

                </RelativeLayout>
                 <RelativeLayout
                    android:id="@+id/rl_reward"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                     android:layout_marginTop="0.5dp"

                    android:background="@drawable/button_p_kuang4"
                    android:padding="10dp" >

                    <TextView
                        style="@style/new_black_color17Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="发布日期"
                        android:textColor="@color/new_black_color" />

                    <TextView
                        android:id="@+id/addtime"
                        style="@style/new_gray_color15Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:text="@string/load" />

                </RelativeLayout>
                 
                 <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                     android:layout_marginTop="0.5dp"

                    android:background="@drawable/button_p_kuang4"
                    android:padding="10dp" >

                    <TextView
                        style="@style/new_black_color17Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="保障方式"
                        android:textColor="@color/new_black_color" />

                    <TextView
                        android:id="@+id/tv_baozhang"
                        style="@style/new_gray_color15Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:text="100%本息保障" />

                </RelativeLayout>
                 <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="0.5dp"

                    android:background="@drawable/button_p_kuang4"
                    android:padding="10dp" >

                    <TextView
                        style="@style/new_black_color17Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="加入条件"
                        android:textColor="@color/new_black_color" />

                    <TextView
                        android:id="@+id/tv_jrtj"
                        style="@style/new_gray_color15Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:maxWidth="180dp"
                        android:text="@string/load" />

                </RelativeLayout>
                 <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                     android:layout_marginTop="0.5dp"

                    android:background="@drawable/button_p_kuang4"
                    android:padding="10dp" >

                    <TextView
                        style="@style/new_black_color17Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="借款期限"
                        android:textColor="@color/new_black_color" />

                    <TextView
                        android:id="@+id/tv_jkqx"
                        style="@style/new_gray_color15Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:text="@string/load" />

                </RelativeLayout>           
                 <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                     android:layout_marginTop="0.5dp"
                    android:background="@drawable/button_p_kuang4"
                    android:padding="10dp" >

                    <TextView
                        style="@style/new_black_color17Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="单笔额度上限"
                        android:textColor="@color/new_black_color" />

                    <TextView
                        android:id="@+id/tv_max_share"
                        style="@style/new_gray_color15Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:text="@string/load" />

                </RelativeLayout>
                
                 <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                     android:layout_marginTop="0.5dp"
                    android:background="@drawable/button_p_kuang4"
                    android:padding="10dp" >

                    <TextView
                        style="@style/new_black_color17Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="受益方式"
                        android:textColor="@color/new_black_color" />

                    <TextView
                        android:id="@+id/tv_borrow_benefit"
                        style="@style/new_gray_color15Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:maxWidth="180dp"
                        android:text="@string/load" />

                </RelativeLayout>
                           
                 <RelativeLayout
                    android:id="@+id/tender_people"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_p_kuang4"
                    android:padding="10dp" >

                    <TextView
                        style="@style/black16Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="投标记录" />

                    <TextView
                        android:id="@+id/tv_numberpeople"
                        style="@style/gray16Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/btn1"
                        android:text="@string/load" />

                    <Button
                        android:id="@+id/btn1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/more_item_selector" />
                </RelativeLayout>    
                <RelativeLayout
                    android:id="@+id/tender_miaoshu"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0.5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/button_p_kuang4"
                    android:padding="10dp" >

                    <TextView
                        style="@style/black16Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="项目介绍"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/new_black_color" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/more_item_selector" />

                 </RelativeLayout>
                 
                 <TextView
                    android:visibility="gone"
                    android:id="@+id/xq_ms_str"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="123" />
                       
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/sq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@color/white"
                    android:drawableLeft="@drawable/jtjs"
                    android:drawablePadding="5dp"
                    android:visibility="gone"
                    android:textColor="#2dada1" />

                <Button
                    android:id="@+id/enter_buy"
                    style="@style/white22Text"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_centerVertical="true"
                    android:background="@color/title_color"
                    android:gravity="center"
                    android:text="立即投标" />
            </RelativeLayout>
             

        </LinearLayout>
    </ScrollView>



</LinearLayout>