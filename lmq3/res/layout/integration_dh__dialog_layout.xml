<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#88323232"
    >


<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:orientation="vertical"
        android:background="@drawable/layout_layer"
        >



     <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="兑换礼品："
            style="@style/black16Text"
            />

        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/load"
             style="@style/black20Text"
             android:textColor="@color/red"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元抵用券"
             style="@style/black13Text"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
         android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="需要消耗："
            style="@style/black16Text"
            />

        <TextView
            android:id="@+id/xhjf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/load"
             style="@style/black13Text"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分"
             style="@style/black13Text"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(您拥有"
             style="@style/black13Text"
            />
        <TextView
            android:id="@+id/kyjf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/load"
            style="@style/black13Text"
            />
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分)"
             style="@style/black13Text"
            />
    </LinearLayout>
  
      <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
         android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="兑换数量："
            android:gravity="center_vertical"
            style="@style/black16Text"
            />

        <EditText
            android:id="@+id/dh_number"
            android:inputType="number"
            android:singleLine="true"
            android:layout_width="150dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:background="@drawable/new_edt_shape"
            />
    </LinearLayout>
    <include layout="@layout/dialog_head"></include>

    </LinearLayout>



</LinearLayout>
