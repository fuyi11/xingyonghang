<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tz_info"
            style="@style/black16Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="变现宝595号" />

        <TextView
            style="@style/gray16Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="年化利率" />

        <TextView
            android:id="@+id/tz_num2"
            style="@style/red14Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="0.08%" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:orientation="vertical" >

        <TextView
            style="@style/black16Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" " />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                style="@style/blue14Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="限" />

            <TextView
                android:id="@+id/tz_num4"
                style="@style/gray14Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5个月" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                style="@style/black14Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金额" />

            <TextView
                android:id="@+id/tz_num1"
                style="@style/gray14Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/load" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="0.5" >

        <com.lmq.view.RoundProgressBar
            android:id="@+id/progress"
            android:layout_width="60dp"
            android:layout_height="60dp" 
            />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:src="@drawable/tuijian" />

</LinearLayout>