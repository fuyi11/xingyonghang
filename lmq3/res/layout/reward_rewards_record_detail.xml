<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#f0eff4" >
    
         <include layout="@layout/page_head"/>
  
  <RelativeLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:paddingBottom="20dp"
      android:background="@color/index_detail_red" >

      <TextView
          android:id="@+id/exp_type"
          style="@style/white18Text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:text="一名惊人"
          android:layout_marginTop="20dp"
          android:layout_margin="15dp" />

      <TextView
          android:id="@+id/money"
          style="@style/white20Text"
          android:textSize="40sp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/exp_type"
          android:layout_centerHorizontal="true"
          android:gravity="center_vertical"
          android:text="@string/load" />
      <TextView
          style="@style/white16Text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toRightOf="@id/money"
          android:layout_below="@id/exp_type"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="25dp"
          android:text="元" />
  </RelativeLayout>
    
   <LinearLayout
         android:id="@+id/index_lay2"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:background="@color/white"
         android:orientation="vertical" > 
            <LinearLayout
                   android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="horizontal"
                    android:padding="10dp" >

                    <TextView
                        style="@style/black18Text"
                        android:textColor="@color/new_black_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_marginLeft="5dp"
                        android:text="@string/rewardtjl_time" />

                    <TextView
                        android:id="@+id/tv_rewardtzjf_time"
                        style="@style/gray16Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/load"/>


                </LinearLayout>
                
            <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/back" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    style="@style/black18Text"
                    android:textColor="@color/new_black_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:text="@string/rewardtjl_detail" />

                <TextView
                    android:id="@+id/tv_rewardtzjf_detail"
                    style="@style/gray16Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/load" />
            </LinearLayout>
                
     <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/back" />
          <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="10dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp" >

                    <TextView
                        style="@style/black18Text"
                        android:textColor="@color/new_black_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_marginLeft="5dp"
                        android:text="@string/rewardtkl_status" />

                    <TextView
                        android:id="@+id/tv_rewardtzjf_type"
                        style="@style/gray16Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/load"/>


                </LinearLayout>
          </LinearLayout>

    

</LinearLayout>