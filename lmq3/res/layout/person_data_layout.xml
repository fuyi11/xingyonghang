<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/back" >
    
    <include layout="@layout/page_head"/>
    
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="20dp"
	    android:text="完善个人信息有助于加快您的借款速度"
	    style="@style/black13Text"
		android:textColor="#808080"
		android:layout_marginLeft="15dp"
	    android:singleLine="true"
	    android:layout_gravity="left"/>

	<RelativeLayout
        android:id="@+id/person_btn"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:background="@color/white"
	    android:padding="10dp">
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="个人资料"
			android:textColor="#404040"
	        style="@style/black18Text"
	        android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/person_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/gray16Text"
            android:text="@string/load"
			android:textColor="#808080"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            />

	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/more_item_selector"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="10dp"/>
	</RelativeLayout>
	<RelativeLayout
        android:id="@+id/contact_btn"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="0.5dp"
	    android:background="@color/white"
	    android:padding="10dp">
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="联系方式"
			android:textColor="@color/new_black_color"
	        style="@style/black18Text"
	        android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/contant_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             style="@style/gray16Text"
            android:text="@string/load"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            />
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/more_item_selector"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="10dp"/>
	</RelativeLayout>
	<RelativeLayout
        android:id="@+id/department_btn"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="0.5dp"
	    android:background="@color/white"
	    android:padding="10dp">
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="单位资料"
	        style="@style/black18Text"
			android:textColor="@color/new_black_color"
	        android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/uniut_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             style="@style/gray16Text"
            android:text="@string/load"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            />
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/more_item_selector"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="10dp"/>
	</RelativeLayout>
	<RelativeLayout
        android:id="@+id/money_btn"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="0.5dp"
	    android:background="@color/white"
	    android:padding="10dp">
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="财务状况"
	        style="@style/black18Text"
			android:textColor="@color/new_black_color"
	        android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/money_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             style="@style/gray16Text"
            android:text="@string/load"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            />
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/more_item_selector"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="10dp"/>
	</RelativeLayout>
	<RelativeLayout
        android:id="@+id/upload_btn"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="0.5dp"
	    android:background="@color/white"
	    android:padding="10dp">
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="资料上传"
	        style="@style/black18Text"
			android:textColor="@color/new_black_color"
	        android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/upload_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             style="@style/gray16Text"
             android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            />
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/more_item_selector"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="10dp"/>
	</RelativeLayout>
</LinearLayout>
